{
        "request" : "get",
        "path"  : "/checking_service/user/_search",
        "data"  : {
                "version": true,
                "query" : {
                        "bool": {
                                "must" : [
                                        {
                                                "term" : {
                                                        "_id"   : "{USER_NAME}"
                                                }
                                        },
                                        {
                                                "term" : {
                                                        "validated"   : 1
                                                }
                                        }
                                ]
                        }

                }
        }
}
