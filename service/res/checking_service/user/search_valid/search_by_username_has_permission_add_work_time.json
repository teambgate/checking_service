{
        "request" : "get",
        "path"  : "/checking_service/user/_search",
        "data"  : {
                "version": true,
                "query" : {
                        "bool": {
                                "must" : [
                                        {
                                                "term" : {
                                                        "_id"   : "{USER_NAME}"
                                                }
                                        },
                                        {
                                                "term" : {
                                                        "user_pass"   : "{USER_PASS}"
                                                }
                                        },
                                        {
                                                "term" : {
                                                        "validated"   : 1
                                                }
                                        },
                                        {
                                                "has_child" : {
                                                        "type" : "permission_add_work_time",
                                                        "query" : {
                                                                "bool" : {
                                                                        "must" : [
                                                                                {
                                                                                        "term" : {
                                                                                                "active" : 1
                                                                                        }
                                                                                }
                                                                        ]
                                                                }
                                                        }
                                                }
                                        }
                                ]
                        }

                }
        }
}
