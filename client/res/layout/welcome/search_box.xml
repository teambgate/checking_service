<touch key="search"/>
<controller name="search_box_controller"/>
<view width="205" height="40" type="size_horizontal">
        <textfield width="match_parent" padding_left="45" height="40" touch="true" border="#d1d1d1" placeholder="Nhập địa chỉ" color="#ffffffe1" round="4"/>
        <view width="fill_parent" height="40" margin_left="5" clip="true" round="4" type="relative"
            color="#2980b9" border="#2980b9" touch="true" touch_delegate="search">
                <label align="center" text_color="#ffffff" width="match_parent" height="10" font="Arial"
                    font_size="16" text_align="center" multiline="false">→</label>
        </view>
</view>
