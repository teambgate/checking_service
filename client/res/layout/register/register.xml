<touch key="back"/>
<touch key="register"/>
<touch key="hover"/>
<controller name="register_controller"/>
<view width="match_parent" height="match_parent" type="relative" align="center" clip="true" touch="true" touch_delegate="hover" hash="content">
        <!-- <view width="match_parent" height="match_parent" type="relative" align="center" hash="content"> -->
            <image src="res/images/paris_france_eiffel_tower_9662_750x1334.jpg" width="750" height="1334" scale="0.5" align="center"/>
            <view width="match_parent" height="match_parent" color="#ffffff" alpha="0.75" align="center"/>
            <view width="300" height="50" type="relative" align="top|center" margin_top="40" border="#d1d1d1" color="#ffffffe1" round="4">
                <label align="center" text_color="#000000" width="match_parent"
                    height="10" font="Arial" font_size="22"
                    text_align="center" multiline="false" hash="location_name">B-GATE</label>
            </view>
            <view type="vertical" width="300" height="wrap_content" align="center">
                    <textfield width="match_parent" height="40" align="center" touch="true" border="#d1d1d1" placeholder="Nhập user_name" color="#ffffffe1" round="4"/>
                    <textfield width="match_parent" margin_top="10" align="center" height="40" touch="true" border="#d1d1d1" placeholder="Nhập pass_word" color="#ffffffe1" round="4"/>
                    <view width="match_parent" height="0" align="center" type="relative" hash="notification_group" visible="false">
                            <view align="center|out_bottom" width="match_parent" height="wrap_content"
                                type="vertical" border="#F64747" margin_top="10" color="#ffffffe1" round="4">
                                <label align="center" text_color="#F64747" width="match_parent"
                                    height="10" font="Arial" font_size="14"  padding_left="20"
                                    text_align="center" multiline="true" margin_top="5" margin_bottom="5" hash="notification">Tài khoản đã tồn tại!</label>
                            </view>
                    </view>
            </view>
            <view width="300" height="50" align="bottom|center" type="size_horizontal" margin_bottom="10">
                <view width="fill_parent" height="50" clip="true" round="4" margin_right="10"
                    type="relative" color="#F64747" border="#F64747" touch="true" touch_delegate="back">
                    <label align="center" text_color="#ffffff" width="match_parent"
                        height="10" font="Arial" font_size="16" text_align="center" multiline="false">Quay lại</label>
                </view>
                <view width="fill_parent" height="50" clip="true" round="4" type="relative"
                     color="#2980b9" border="#2980b9" touch="true" touch_delegate="register">
                    <label align="center" text_color="#ffffff" width="match_parent"
                        height="10" font="Arial" font_size="16" text_align="center" multiline="false">Tiếp tục</label>
                </view>
            </view>
    <!-- </view> -->
</view>
